<h1>Login</h1>
   <%= form_tag '/login' do %>
   <%= label_tag :username%>
   <%= text_field_tag :username %>

   <%= label_tag :password%>
   <%= password_field_tag :password%>

   <%= submit_tag "Login"%>
<%end%>

<% if flash[:error] %>
    <% flash[:error].each do |error|%>
    <p style="color:red" > <%= error %> </p>
    <% end %>
<% end %>